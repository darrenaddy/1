/*--------------------------------------------------------------
# Navigation Menu
--------------------------------------------------------------*/

/**
* Desktop Navigation 
*/
.navbar {
  padding: 0;

  ul {
    margin: 30;
    padding: 0;
    display: flex;
    list-style: none;
    align-items: left;
  }

  li {
    position: relative;
  }
  
  a, a:focus {
    align-items: center;
    justify-content: space-between;
    padding: 10px 0 10px 30px;
    font-family: $secondary;
    font-size: 15px; 
    font-weight: 500;
    color: #000;
    white-space: nowrap;
    transition: 0.3s;

    i {
      font-size: 12px;
      line-height: 0;
      margin-left: 5px;
    }
  }

  a:hover, .active, .active:focus, li:hover > a  {
    color: $primary;
  }

  

  button {
    width:150px;
    .navbar-toggle {
      width: 32px;
    }
  .getstarted, .getstarted:focus {
    background: $primary;
    padding: 4px 4px;
    margin-left: 0px;
    border-radius: 4px;
    font-weight: 500;
    color: #fff;
    &:hover {
      color: #fff;
      background: lighten($primary, .8);
    }
  }
}



  .dropdown {
    ul {
      display: block;
      position: absolute;
      left: 14px;
      top: calc(100% + 30px);
      margin: 0;
      padding: 10px 0;
      z-index: 99;
      opacity: 0;
      visibility: hidden;
      background: #fff;
      box-shadow: 0px 0px 30px rgba(127, 137, 161, 0.25);
      transition: 0.3s;
      
      li {
        min-width: 200px;
      }

      a {
        padding: 10px 20px;
        font-size: 15px;
        color: #000;
        text-transform: none;
        font-weight: 400;
        i {
          font-size: 12px;
        }
      }

      a:hover, .active:hover, li:hover > a {
        color: $primary;
      }
    }

    a {
      .nav-link {
        border: 0;
        padding: 15px;
        &.active {
          color: $white;
          background: $primary;
        }
      }
    }

    &:hover > ul {
      opacity: 1;
      top: 100%;
      visibility: visible;
    }

  }

  .dropdown .dropdown {
    
    ul {
      top: 0;
      left: calc(100% - 30px);
      visibility: hidden;
    }

    &:hover > ul {
      opacity: 1;
      top: 0;
      left: 100%;
      visibility: visible;
    }

    @media (max-width: 1366px) {
      ul {
        left: -90%;
      }

      &:hover > ul {
        left: -100%;
      }
    }
  }

}
/* For Mobile Navigation Styling see _nav-offcanvas.scss */

